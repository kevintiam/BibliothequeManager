<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:BibliothequeManager.Properties"
             x:Class="BibliothequeManager.Pages.Views.Accueil"
              xmlns:localApp="clr-namespace:BibliothequeManager"
             Title="Accueil"          
             NavigationPage.HasNavigationBar="False">

    <!-- Fond d'Ã©cran -->
    <Grid>
        
      
        <Image Source="new_background.png"
               Aspect="AspectFill"
               InputTransparent="True"
               Opacity="0.3" />
        

        <!-- Contenu principal -->
        <ScrollView>
            <Grid RowDefinitions="Auto,*,Auto">

                <!-- ========== EN-TÃŠTE ========== -->
                <Grid Style="{StaticResource StackLayoutAcc}" ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">
                    <!-- Logo Ã  gauche -->
                    <Border Style="{StaticResource RoundedImageBorder}">
                        <Image Source="logo.png" Style="{StaticResource Logo}" />
                    </Border>

                    <!-- Texte de bienvenue (occupe tout l'espace central) -->
                    <StackLayout Grid.Column="1" Grid.RowSpan="2" VerticalOptions="Center">
                        <Label  
                       Text="{Binding [WelcomToLibraNova], Source={x:Static localApp:App.Localized}}"
                       Style="{StaticResource HeaderLabel}" />
                        <Label Text="{Binding [TextWelcom], Source={x:Static localApp:App.Localized}}"
                         Style="{StaticResource SubHeaderLabel}" />
                    </StackLayout>

                    <!-- Bouton de changement de langue  -->
                    <Button Grid.Column="3" Grid.Row="0"
                        Text="ðŸŒFR/EN"                          
                        Style="{StaticResource LangageBouton}"
                        x:Name="LangButton"                            
                        Clicked="OnSwitchLanguageClicked"
                        HorizontalOptions="Center"/>     
                </Grid>

                <!-- ========== CARTE DE FONCTIONNALITÃ‰S ========== -->
                <Grid Grid.Row="1" Style="{StaticResource FeatureCard}"
                      RowDefinitions="200,200"
                      ColumnDefinitions="*,*,*"
                      Padding="15">

                    <!-- Ligne 1 -->
                    <Button x:Name="EmprunterLivre" 
                            Text="{Binding [BorrowABook], Source={x:Static localApp:App.Localized}}"
                            Style="{StaticResource FeatureCardContent}" 
                            Grid.Row="0" Grid.Column="0"
                            Clicked="OnEmprunterLivreClicked">
                        <Button.ImageSource>
                            <FontImageSource FontFamily="FontAwesomeSolid" Glyph="&#xf69c;" 
                         Color="{StaticResource PrimaryIconColor}" Size="32" />
                        </Button.ImageSource>
                    </Button>

                    <Button x:Name="RetournerLivre" 
                            Text="{Binding [ReturnABook], Source={x:Static localApp:App.Localized}}"
                            Style="{StaticResource FeatureCardContent}" 
                            Clicked="OnRetournerLivreClicked"
                            Grid.Row="0" Grid.Column="1">
                        <Button.ImageSource>
                            <FontImageSource FontFamily="FontAwesomeSolid" Glyph="&#xf2ea;" 
                                             Color="{StaticResource PrimaryIconColor}" Size="32" />
                        </Button.ImageSource>
                    </Button>

                    <Button x:Name="ReservationLivre" 
                            Text="{Binding [ReserveABook], Source={x:Static localApp:App.Localized}}"
                           Clicked="OnReserverLivreClicked"
                            Style="{StaticResource FeatureCardContent}" 
                            Grid.Row="0" Grid.Column="2">
                        <Button.ImageSource>
                            <FontImageSource FontFamily="FontAwesomeSolid" Glyph="&#xf46d;" 
                                             Color="{StaticResource PrimaryIconColor}" Size="32" />
                        </Button.ImageSource>
                    </Button>

                    <!-- Ligne 2 -->
                    <Button x:Name="GestionEmprunt" 
                             Text="{Binding [LoansManagement], Source={x:Static localApp:App.Localized}}"
                            Clicked="OnGestionEmpruntsClicked"
                            Style="{StaticResource FeatureCardContent}" 
                            Grid.Row="1" Grid.Column="0">
                        <Button.ImageSource>
                            <FontImageSource FontFamily="FontAwesomeSolid" Glyph="&#xf5da;" 
                                             Color="{StaticResource PrimaryIconColor}" Size="32" />
                        </Button.ImageSource>
                    </Button>

                    <Button x:Name="GestionReservation" 
                            Text="{Binding [ManageReservation], Source={x:Static localApp:App.Localized}}"
                            Clicked="OnGestionReservationsClicked"
                            Style="{StaticResource FeatureCardContent}" 
                            Grid.Row="1" Grid.Column="1">
                        <Button.ImageSource>
                            <FontImageSource FontFamily="FontAwesomeSolid" Glyph="&#xf274;" 
                                             Color="{StaticResource PrimaryIconColor}" Size="32" />
                        </Button.ImageSource>
                    </Button>

                    <Button x:Name="GestionAbonnes" 
                            Text="{Binding [MembersManagement], Source={x:Static localApp:App.Localized}}" 
                            Clicked="OnGestionAdherents"
                            Style="{StaticResource FeatureCardContent}" 
                            Grid.Row="1" Grid.Column="2">
                        <Button.ImageSource>
                            <FontImageSource FontFamily="FontAwesomeSolid" Glyph="&#xf0c0;" 
                                             Color="{StaticResource PrimaryIconColor}" Size="32" />
                        </Button.ImageSource>
                    </Button>
                </Grid>

                <!-- ========== SECTION LIVRES DU JOUR ========== -->
                <StackLayout Grid.Row="2" Style="{StaticResource FooterHome}">
                    <Label Text="{Binding [ToDiscoverToday], Source={x:Static localApp:App.Localized}}" 
                           Style="{StaticResource SectionTitle}" />

                    <Border Style="{StaticResource FooterHomeContent}">
                        <Grid ColumnDefinitions="*,*,*" ColumnSpacing="20">
                            <!-- Livre 1 -->
                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="book.png" Style="{StaticResource ImageCart}" />
                                <VerticalStackLayout Grid.Column="1" Style="{StaticResource FooterBookText}">
                                    <Label Text="Le Petit Prince" Style="{StaticResource SectionTitleBook}" />
                                    <Label Text="Antoine de Saint-ExupÃ©ry" Style="{StaticResource SectionAuthorsName}" />
                                    <Label Text="Un classique sur lâ€™amitiÃ©, lâ€™amour et la solitude." 
                                           Style="{StaticResource BookDescription}" />
                                </VerticalStackLayout>
                            </Grid>

                            <!-- Livre 2 -->
                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="book.png" Style="{StaticResource ImageCart}" />
                                <VerticalStackLayout Grid.Column="1" Style="{StaticResource FooterBookText}">
                                    <Label Text="1984" Style="{StaticResource SectionTitleBook}" />
                                    <Label Text="George Orwell" Style="{StaticResource SectionAuthorsName}" />
                                    <Label Text="Une dystopie visionnaire sur la surveillance et la libertÃ©." 
                                           Style="{StaticResource BookDescription}" />
                                </VerticalStackLayout>
                            </Grid>

                            <!-- Livre 3 -->
                            <Grid Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="book.png" Style="{StaticResource ImageCart}" />
                                <VerticalStackLayout Grid.Column="1" Style="{StaticResource FooterBookText}">
                                    <Label Text="Beloved" Style="{StaticResource SectionTitleBook}" />
                                    <Label Text="Toni Morrison" Style="{StaticResource SectionAuthorsName}" />
                                    <Label Text="Un roman puissant sur la mÃ©moire de lâ€™esclavage." 
                                           Style="{StaticResource BookDescription}" />
                                </VerticalStackLayout>
                            </Grid>
                        </Grid>
                    </Border>
                </StackLayout>

            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>