<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BibliothequeManager.Pages.ActionPage.Emprunt"
              xmlns:localApp="clr-namespace:BibliothequeManager"
             NavigationPage.HasNavigationBar="False"
             Title="Emprunt">
    <Grid>
        <!-- Fond -->
        <Image Source="new_background.png"
           Aspect="AspectFill"
           InputTransparent="True"
           Opacity="0.2" />
        <ScrollView>
            <Grid RowDefinitions="Auto,*">

                <!-- ========== EN-TÃŠTE ========== -->
                <Grid Style="{StaticResource StackLayoutAcc}">
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="100">
                        <!-- Logo Ã  gauche -->
                        <Border Style="{StaticResource RoundedImageBorder}">
                            <Image Source="logo.png" Style="{StaticResource Logo}" />
                        </Border>

                        <StackLayout Style="{StaticResource StackLayoutAcce}">
                            <Label Text="{Binding [BorrowANewBook], Source={x:Static localApp:App.Localized}}" 
                                    Style="{StaticResource HeaderLabel}" />
                            <Label  Text="{Binding [ShareKnowledge], Source={x:Static localApp:App.Localized}}"  
                                    Style="{StaticResource SubHeaderLabel}" />
                        </StackLayout>
                    </StackLayout>
                </Grid>

                <Grid Grid.Row="1" ColumnDefinitions="*,*">

                    <Grid Grid.Column="0">
                        <Image Source="image_emprunt.png"
                               Aspect="AspectFill"
                               InputTransparent="True"
                               MinimumHeightRequest="900"/>

                        <StackLayout Padding="20">
                            <Label Text="{Binding [WelcomeTitle], Source={x:Static localApp:App.Localized}}" 
                                       Style="{StaticResource HeroTitle}"/>
                            <Label Text="{Binding [WelcomeSubtitle], Source={x:Static localApp:App.Localized}}"                             
                                   Style="{StaticResource SectionLabelSubtitle}"
                                   />
                        </StackLayout>
                    </Grid>

                    <StackLayout 
                        Grid.Column="1"
                        Style="{StaticResource CadreEmprunt}">

                        <!-- Entrer les identifiants -->
                        <Image 
                                Source="emprunt_book.png"
                                Style="{StaticResource LogoImage}"
                                Background="Transparent"/>
                        <Label Text="{Binding [RecordALoan], Source={x:Static localApp:App.Localized}}"                             
                           Style="{StaticResource HeroTitle}"/>

                        <!-- ISBN du Livre -->
                        <StackLayout>
                            <Label Text="{Binding [SearchBook], Source={x:Static localApp:App.Localized}}" 
                                           Style="{StaticResource SectionLabel}"/>

                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                <Entry x:Name="RechercheEntry" 
                                               Placeholder="{Binding [ISBN], Source={x:Static localApp:App.Localized}}"                                                
                                               Style="{StaticResource ModernEntry}"
                                               Grid.Column="0"/>

                                <Button Text="ðŸ”Ž"
                                                Style="{StaticResource GradientButtonPrimary}"
                                                Clicked="OnRechercherClicked"
                                                Grid.Column="1"
                                                WidthRequest="60"/>
                            </Grid>
                        </StackLayout>

                        <!-- Section Livre SÃ©lectionnÃ© -->
                        <StackLayout x:Name="LivreSection" 
                                             IsVisible="False">
                            <Border Stroke="#DDD6FE" 
                                            StrokeThickness="1" 
                                            StrokeShape="RoundRectangle 12"
                                            BackgroundColor="#FAF5FF"
                                            Padding="15">
                                <StackLayout >
                                    <Label x:Name="TitreLivre" 
                                                   FontFamily="PlaypenSansBold"
                                                   FontSize="16"
                                                   TextColor="#7C3AED"/>
                                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                        <Label Text="{Binding [Author], Source={x:Static localApp:App.Localized}}"
                                                       Style="{StaticResource InfoLabel}"/>
                                        <Label x:Name="AuteurLivre" 
                                                       Style="{StaticResource InfoValue}"
                                                       Grid.Column="1"/>
                                    </Grid>
                                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                        <Label Text="ISBN:" 
                                                       Style="{StaticResource InfoLabel}"/>
                                        <Label x:Name="IsbnLivre" 
                                                       Style="{StaticResource InfoValue}"
                                                       Grid.Column="1"/>
                                    </Grid>
                                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                        <Label Text="{Binding [Availability], Source={x:Static localApp:App.Localized}}"
                                                       Style="{StaticResource InfoLabel}"/>
                                        <Label x:Name="DisponibiliteLivre" 
                                                       Style="{StaticResource InfoValue}"
                                                       Grid.Column="1"/>
                                    </Grid>
                                </StackLayout>
                            </Border>
                        </StackLayout>
                        <!-- ID de l'abonnÃ© -->
                        <StackLayout>

                            <Label Text="{Binding [Members], Source={x:Static localApp:App.Localized}}" 
                                Style="{StaticResource SectionLabel}"/>
                            <Entry x:Name="AbonneIdEntry" 
                               Placeholder="{Binding [EnterSubscriberID], Source={x:Static localApp:App.Localized}}"                                                
                               Keyboard="Numeric"
                               Style="{StaticResource ModernEntry}"/>
                        </StackLayout>

                        <!-- Date de Retour -->
                        <StackLayout>
                            <Label Text="{Binding [ReturnDate], Source={x:Static localApp:App.Localized}}"  
                                    Style="{StaticResource SectionLabel}"/>

                            <StackLayout Grid.Column="1" Spacing="5">
                                <DatePicker x:Name="DateFinPicker"
                                            Style="{StaticResource ModernDatePicker}"/>
                            </StackLayout>
                        </StackLayout>

                        <!-- Bouton Confirmer -->
                        <Button x:Name="ConfirmerButton" 
                                Text="{Binding [ConfirmLoan], Source={x:Static localApp:App.Localized}}"
                                Style="{StaticResource GradientButtonPrimary}"
                                Clicked="OnConfirmerClicked"/>
                        <!-- Navigation -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                            <Button Grid.Column="0" 
                                     Text="{Binding [Home], Source={x:Static localApp:App.Localized}}" 
                                    Style="{StaticResource GradientButtonSecondary}"
                                    Clicked="OnAccueilClicked"/>

                            <Button Grid.Column="1" 
                                    Text="{Binding [LoanManagement], Source={x:Static localApp:App.Localized}}"  
                                    Style="{StaticResource NextPage}"
                                    Clicked="OnListeEmpruntsClicked"/>
                        </Grid>
                    </StackLayout>
                </Grid>
            </Grid>
        </ScrollView>

    </Grid>
</ContentPage>