<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="BibliothequeManager.Pages.HomePage"
            xmlns:localApp="clr-namespace:BibliothequeManager"
            FlyoutLayoutBehavior="Popover">

    <!-- menu latÃ©ral -->
    <FlyoutPage.Flyout>
        <ContentPage Title="Menu" Style="{StaticResource BackgroundMenu}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- En-tÃªte du menu -->
                <StackLayout Grid.Row="0">
                    <Label x:Name="TitleHome"
                            Text="ðŸ“š LibraNova" 
                           Style="{StaticResource TitleMenu}"/>
                </StackLayout>

                <!-- Navigation principale -->
                <StackLayout Grid.Row="1" 
                            Style="{StaticResource StackLayoutMenu}">
                    <Button x:Name="AccueilButton"
                            Text="{Binding [Home], Source={x:Static localApp:App.Localized}}"
                            Style="{StaticResource ButtonMenu}">
                    </Button>

                    <Button x:Name="LivresButton"
                            Text="{Binding [Book], Source={x:Static localApp:App.Localized}}"
                            Style="{StaticResource ButtonMenu}">
                    </Button>

                    <Button x:Name="AuthorsButton"
                            Text="{Binding [Authors], Source={x:Static localApp:App.Localized}}"
                            Style="{StaticResource ButtonMenu}">
                    </Button>
                    <Button x:Name="CategorieButton"
                            Text="{Binding [Category], Source={x:Static localApp:App.Localized}}"
                            Style="{StaticResource ButtonMenu}">
                    </Button>

                    <Button x:Name="AdherentsButton"
                            Text="{Binding [Members], Source={x:Static localApp:App.Localized}}"
                            Style="{StaticResource ButtonMenu}">
                    </Button>

                    <!-- Bouton de changement de langue  -->
                    <Button Text="{Binding [SwichLanguage], Source={x:Static localApp:App.Localized}}"                         
                        Style="{StaticResource LanguageButtonStyle}"
                        x:Name="LangButton"                            
                        Clicked="OnSwitchLanguageClicked"
                        HorizontalOptions="Center"/>
                </StackLayout>

                <!-- Pied de page -->
                <StackLayout Grid.Row="2" 
                             Style="{StaticResource StackLayoutFooter}">

                    <Button 
                            Text="{Binding [SignOut], Source={x:Static localApp:App.Localized}}"  
                            Command="{Binding LogoutCommand}"
                            Style="{StaticResource ButtonMenuDec}">
                        <Button.ImageSource>
                            <FontImageSource FontFamily="MaterialIcons"
                                             Glyph="logout"
                                             Color="White"
                                             Size="30"/>
                        </Button.ImageSource>
                    </Button>

                    <Label x:Name="version"
                            Text="Version 1.0.0" 
                           Style="{StaticResource LabelVersion}"/>
                </StackLayout>
            </Grid>
        </ContentPage>
    </FlyoutPage.Flyout>

    <!-- contenu principal -->
    <FlyoutPage.Detail>
        <ContentPage>
           
        </ContentPage>
    </FlyoutPage.Detail>

</FlyoutPage>