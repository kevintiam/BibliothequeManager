<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BibliothequeManager"
             x:Class="BibliothequeManager.App"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Palettes de couleurs principales -->
            <Color x:Key="PrimaryColor">#E6A2C8</Color>
            <!-- Rose doux -->
            <Color x:Key="SecondaryColor">#F8E6F0</Color>
            <!-- Rose clair -->
            <Color x:Key="AccentColor">#D4A5C1</Color>
            <!-- Rose lavande -->
            <Color x:Key="TextColor">#333333</Color>
            <Color x:Key="HighlightColor">blue</Color>
            <!-- Rose vif -->
            <Color x:Key="BackgroundColor">#FFFFFF</Color>
            <Color x:Key="FieldIconColor">#000000</Color>
            <!-- Gris doux pour les icônes -->
            <Color x:Key="InputBorder">#F8F9FA</Color>
            <!-- Fond du champ -->


            <!-- Tailles d'icônes -->
            <x:Double x:Key="FieldIconSize">20</x:Double>
            <x:Double x:Key="ButtonIconSize">24</x:Double>
            <!-- Styles pour la bouton langage -->
            <Style x:Key="LangageBouton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="CornerRadius" Value="4" />
                <Setter Property="FontSize" Value="10" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="WidthRequest" Value="24" />
                <Setter Property="HeightRequest" Value="24" />
                <Setter Property="Padding" Value="0" />
            </Style>

            <!-- Styles pour la page de connexion -->
            <Style x:Key="LoginGradientBackground" TargetType="BoxView">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#667eea" Offset="0.1"/>
                            <GradientStop Color="#764ba2" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="Form" TargetType="VerticalStackLayout">
                <Setter Property="Spacing" Value="30"/>
                <Setter Property="Padding" Value="40,60"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>
            <Style x:Key="FormContent" TargetType="VerticalStackLayout">
                <Setter Property="Spacing" Value="30"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="WidthRequest" Value="450"/>
                <Setter Property="VerticalOptions" Value="Center"/>
            </Style>

            <Style x:Key="FormChamp" TargetType="VerticalStackLayout">
                <Setter Property="Spacing" Value="20"/>
            </Style>

            <Style x:Key="MainTitleLabel" TargetType="Label">
                <Setter Property="FontSize" Value="60"/>
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="FontFamily" Value="PlaypenSansRegular"/>
            </Style>

            <Style x:Key="SubtitleLabel" TargetType="Label">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="FontFamily" Value="PlaypenSansLight"/>
                <Setter Property="FontAttributes" Value="Italic"/>
            </Style>

            <Style x:Key="LoginFormBorder" TargetType="Border">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="Padding" Value="25,30"/>
                <Setter Property="Stroke" Value="Transparent"/>
                <Setter Property="StrokeShape" Value="RoundRectangle 20"/>
                <Setter Property="WidthRequest" Value="500"/>
                <Setter Property="HeightRequest" Value="500"/>
                <Setter Property="MaximumWidthRequest" Value="500"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="VerticalOptions" Value="Center"/>
            </Style>

            <Style x:Key="FormTitleLabel" TargetType="Label">
                <Setter Property="FontSize" Value="25"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="Margin" Value="0,0,0,10"/>
                <Setter Property="VerticalTextAlignment" Value="Center"/>
                <Setter Property="HorizontalTextAlignment" Value="Center"/>
                <Setter Property="FontFamily" Value="PlaypenSansRegular"/>
            </Style>

            <!-- Style InputFieldBorder SANS BORDURE comme demandé -->
            <!-- Coins légèrement arrondis -->
            <Style x:Key="InputFieldBorder" TargetType="Border">
                <Setter Property="BackgroundColor" Value="{StaticResource InputBorder}"/>
                <Setter Property="Stroke" Value="Transparent"/>
                <Setter Property="StrokeShape">
                    <Setter.Value>
                        <RoundRectangle CornerRadius="10"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="StrokeThickness" Value="0"/>
                <Setter Property="Margin" Value="10,5"/>
                <Setter Property="Padding" Value="15,0"/>
                <Setter Property="HeightRequest" Value="55"/>
            </Style>

            <!-- Entry sans bordure ni effet visuel -->
            <Style x:Key="FormEntry" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="TextColor" Value="{StaticResource TextColor}"/>
                <Setter Property="PlaceholderColor" Value="{StaticResource TextColor}"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Margin" Value="0"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="ClearButtonVisibility" Value="WhileEditing"/>
                <Setter Property="FontFamily" Value="PlaypenSansRegular"/>
            </Style>

            <Style x:Key="ErrorBorder" TargetType="Border">
                <Setter Property="BackgroundColor" Value="#FFEBEE"/>
                <Setter Property="Stroke" Value="#D32F2F"/>
                <Setter Property="StrokeThickness" Value="1"/>
                <Setter Property="StrokeShape" Value="RoundRectangle 8"/>
                <Setter Property="Padding" Value="15,10"/>
                <Setter Property="Margin" Value="10,5"/>
            </Style>

            <Style x:Key="ErrorLabel" TargetType="Label">
                <Setter Property="TextColor" Value="#D32F2F"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="HorizontalTextAlignment" Value="Center"/>
                <Setter Property="FontFamily" Value="PlaypenSansRegular"/>
            </Style>

            <Style x:Key="LoginButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource HighlightColor}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="HeightRequest" Value="50"/>
                <Setter Property="CornerRadius" Value="25"/>
                <Setter Property="Margin" Value="10,20"/>
                <Setter Property="Padding" Value="0,10"/>
                <Setter Property="FontFamily" Value="PlaypenSansRegular"/>
            </Style>

            <Style x:Key="ButtonLabel" TargetType="Label">
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="FontFamily" Value="PlaypenSansRegular"/>
            </Style>

            <Style x:Key="ForgotPasswordLabel" TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource HighlightColor}"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontFamily" Value="PlaypenSansLight"/>
            </Style>

            <!-- Style pour les icônes dans les champs -->
            <Style x:Key="FieldIconStyle" TargetType="Image">
                <Setter Property="HeightRequest" Value="{StaticResource FieldIconSize}" />
                <Setter Property="WidthRequest" Value="{StaticResource FieldIconSize}" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="Margin" Value="15,0,0,0" />
            </Style>

            <Style x:Key="ImageButtonStyle" TargetType="ImageButton">
                <Setter Property="HeightRequest" Value="20"/>
                <Setter Property="WidthRequest" Value="20"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="BackgroundColor" Value="Transparent"/>
            </Style>

            <!-- Style pour le layout des champs avec icônes -->
            <Style x:Key="FieldGrid" TargetType="Grid">
                <Setter Property="ColumnDefinitions" Value="Auto,*"/>
                <Setter Property="ColumnSpacing" Value="10"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="HeightRequest" Value="50"/>
            </Style>

            <Style x:Key="FormHori" TargetType="HorizontalStackLayout">
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Spacing" Value="15"/>
                <Setter Property="Padding" Value="0,0,0,40"/>
            </Style>
            <Style x:Key="FormHoriContent" TargetType="HorizontalStackLayout">
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Spacing" Value="15"/>
                <Setter Property="Padding" Value="0,0,0,40"/>
            </Style>

            <Style x:Key="FormHoriFoot" TargetType="HorizontalStackLayout">
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Spacing" Value="15"/>
                <Setter Property="Padding" Value="0"/>
            </Style>

            <Style x:Key="ImageStyleHeader" TargetType="Image">
                <Setter Property="HeightRequest" Value="35"/>
                <Setter Property="WidthRequest" Value="35"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="VerticalOptions" Value="Center"/>
            </Style>
            
            <Style x:Key="ImageStyle" TargetType="Image">
                <Setter Property="HeightRequest" Value="25"/>
                <Setter Property="WidthRequest" Value="25"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="VerticalOptions" Value="Center"/>
            </Style>



            <!-- STYLE POUR LE MENU PRINCIPALE-->
            <!-- Couleurs principales -->
            <Color x:Key="PrimaryBlue">#2196F3</Color>
            <Color x:Key="DarkBlue">#1976D2</Color>
            <Color x:Key="LightBlue">#E3F2FD</Color>
            <Color x:Key="White">#FFFFFF</Color>
            <Color x:Key="Gray600">#6B7280</Color>
            <Color x:Key="LightBackground">#F8F9FA</Color>

            <!-- Dégradé pour le menu -->
            <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource PrimaryBlue}" Offset="0.0"/>
                <GradientStop Color="{StaticResource DarkBlue}" Offset="1.0"/>
            </LinearGradientBrush>

            <!-- Styles pour le menu -->
            <Style x:Key="BackgroundMenu" TargetType="ContentPage">
                <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
                <Setter Property="Padding" Value="0"/>
            </Style>

            <Style x:Key="TitleMenu" TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource White}"/>
                <Setter Property="HorizontalTextAlignment" Value="Center"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="FontFamily" Value="PlaypenSansSemiBold"/>
                <Setter Property="FontSize" Value="30"/>
                <Setter Property="Margin" Value="0,20,0,30"/>
                <Setter Property="Padding" Value="0,15"/>
                <Setter Property="BackgroundColor" Value="Transparent"/>
            </Style>

            <Style x:Key="ButtonMenu" TargetType="Button">
                <Setter Property="CornerRadius" Value="28" />
                <Setter Property="HeightRequest" Value="56" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontFamily" Value="PlaypenSansMedium" />
                <Setter Property="TextColor" Value="{StaticResource White}" />
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="BorderWidth" Value="0" />
                <Setter Property="Margin" Value="0,8" />
                <Setter Property="HorizontalOptions" Value="Start" />
                <Setter Property="VerticalOptions" Value="Start"/>
                <Setter Property="Padding" Value="50,0" />
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="TextColor" Value="{StaticResource White}" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="WidthRequest" Value="250"/>
                                    <Setter Property="TextColor" Value="White" />
                                    <Setter Property="Background" Value="#40FFFFFF"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>

            <!-- Couleurs douces et harmonisées -->
            <Color x:Key="PrimarySoftPink">#FFB6C1</Color>
            <Color x:Key="PrimaryDeepPink">#FF69B4</Color>
            <Color x:Key="TextPrimary">#2C2C2C</Color>
            <Color x:Key="TextSecondary">#666666</Color>
            <Color x:Key="SurfaceBackground">#FFFFFF</Color>

            <!-- Style pour les boutons de langue -->
            <Style x:Key="LanguageButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource SurfaceBackground}" />
                <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
                <Setter Property="FontFamily" Value="PlaypenSansMedium" />
                <Setter Property="HeightRequest" Value="56" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Padding" Value="50,0" />
                <Setter Property="Margin" Value="4" />
                <Setter Property="CornerRadius" Value="28" />
                <Setter Property="BorderWidth" Value="1" />
                <Setter Property="BorderColor" Value="{StaticResource PrimarySoftPink}" />
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{StaticResource PrimarySoftPink}" />
                                    <Setter Property="TextColor" Value="White" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
            
            <Style x:Key="ButtonMenuDec" TargetType="Button">
                <Setter Property="CornerRadius" Value="28" />
                <Setter Property="HeightRequest" Value="56" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontFamily" Value="PlaypenSansMedium" />
                <Setter Property="BackgroundColor" Value="#30FF6B6B" />
                <Setter Property="BorderWidth" Value="0" />
                <Setter Property="Margin" Value="0,8" />
                <Setter Property="HorizontalOptions" Value="Start" />
                <Setter Property="VerticalOptions" Value="Start"/>
                <Setter Property="Padding" Value="50,0" />
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="TextColor" Value="{StaticResource White}" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="WidthRequest" Value="250"/>
                                    <Setter Property="TextColor" Value="#FF6B6B" />
                                    <Setter Property="Background" Value="#50FF6B6B"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>

            <Style x:Key="StackLayoutMenu" TargetType="StackLayout">
                <Setter Property="Margin" Value="20,0"/>
                <Setter Property="VerticalOptions" Value="Start"/>
                <Setter Property="Spacing" Value="5"/>
            </Style>

            <Style x:Key="StackLayoutFooter" TargetType="StackLayout">
                <Setter Property="Margin" Value="20,20"/>
                <Setter Property="VerticalOptions" Value="End"/>
                <Setter Property="Spacing" Value="10"/>
            </Style>

            <Style x:Key="LabelVersion" TargetType="Label">
                <Setter Property="Margin" Value="0,10"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="TextColor" Value="#A0FFFFFF"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>
            
            <!-- Styles la page d'accueille -->
            <Style x:Key="StackLayoutAcc" TargetType="HorizontalStackLayout">
                <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
                <Setter Property="HeightRequest" Value="150"/>
                <Setter Property="Spacing" Value="20"/>
                <Setter Property="VerticalOptions" Value="Center"/>
            </Style>
            
            <!-- Style pour une image avec coins arrondis -->
            <Style x:Key="RoundedImageBorder" TargetType="Border">
                <Setter Property="StrokeThickness" Value="0" />
                <Setter Property="StrokeShape">
                    <Setter.Value>
                        <!-- CornerRadius = moitié de Width/Height -->
                        <RoundRectangleGeometry CornerRadius="50" 
                        Rect="0,0,120,120" />
                    </Setter.Value>
                </Setter>
                <Setter Property="WidthRequest" Value="120" />
                <Setter Property="HeightRequest" Value="120" />
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>
            <Style x:Key="Logo" TargetType="Image">
                <Setter Property="WidthRequest" Value="120"/>
                <Setter Property="HeightRequest" Value="120"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="Aspect" Value="AspectFill"/>
            </Style>
            <Style x:Key="StackLayoutAcce" TargetType="StackLayout">
                <Setter Property="Padding" Value="30,30"/>
                <Setter Property="Spacing" Value="5"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>
            <Style x:Key="HeaderLabel" TargetType="Label">
                <Setter Property="FontSize" Value="40"/>
                <Setter Property="TextColor" Value="{StaticResource White}"/>
                <Setter Property="FontFamily" Value="PlaypenSansSemiBold"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>

            <Style x:Key="SubHeaderLabel" TargetType="Label">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="TextColor" Value="#E0E0E0"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="HorizontalTextAlignment" Value="Center"/>
                <Setter Property="FontFamily" Value="PlaypenSansRegular"/>
                <Setter Property="FontAttributes" Value="Italic"/>
            </Style>

            <Color x:Key="PrimaryIconColor">#000000</Color>
            <Color x:Key="HoverBlue">#BBDEFB</Color>
            <Color x:Key="PressedBlue">#90CAF9</Color>
            <Color x:Key="PrimaryTextColor">#1A237E</Color>
            <Style x:Key="FeatureCardContent" TargetType="Button">
                <!-- Apparence normale -->
                <Setter Property="Margin" Value="70,50" />
                <Setter Property="HeightRequest" Value="100" />
                <Setter Property="WidthRequest" Value="260" />
                <Setter Property="CornerRadius" Value="24" />
                <Setter Property="BackgroundColor" Value="{StaticResource LightBlue}" />
                <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
                <Setter Property="FontFamily" Value="PlaypenSansMedium" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="BorderWidth" Value="0" />
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="#20000000" Offset="2,4" Radius="12" Opacity="0.3" />
                    </Setter.Value>
                </Setter>

                <!-- Effets au survol et à l'appui -->
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">

                            <!-- État normal -->
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="Scale" Value="1.0" />
                                    <Setter Property="BackgroundColor" Value="{StaticResource LightBlue}" />
                                </VisualState.Setters>
                            </VisualState>

                            <!-- État au survol (desktop) -->
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="Scale" Value="1.05" />
                                    <Setter Property="BackgroundColor" Value="{StaticResource HoverBlue}" />
                                    <Setter Property="Shadow">
                                        <Setter.Value>
                                            <Shadow Brush="#30000000" Offset="4,6" Radius="16" Opacity="0.4" />
                                        </Setter.Value>
                                    </Setter>
                                </VisualState.Setters>
                            </VisualState>

                            <!-- État appuyé (mobile/desktop) -->
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Scale" Value="0.98" />
                                    <Setter Property="BackgroundColor" Value="{StaticResource PressedBlue}" />
                                </VisualState.Setters>
                            </VisualState>

                            <!-- État désactivé -->
                            <VisualState x:Name="Disabled">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.5" />
                                </VisualState.Setters>
                            </VisualState>

                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>

            <Style x:Key="FeatureCard" TargetType="Grid">
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>

            <!-- PIEDS DE LA PAGE D'ACCEUIL -->

            <Style x:Key="FooterCartHome" TargetType="HorizontalStackLayout">
                <Setter Property="HorizontalOptions" Value="Fill"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="Spacing" Value="10"/>
            </Style>

            <Style x:Key="FooterCartHomeText" TargetType="VerticalStackLayout">
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="Spacing" Value="5"/>
            </Style>
            
            <Style x:Key="StatNumber" TargetType="Label">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontFamily" Value="PlaypenSansBold"/>
                <Setter Property="TextColor" Value="{StaticResource PrimaryBlue}"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>

            <Style x:Key="StatText" TargetType="Label">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="TextColor" Value="{StaticResource Gray600}"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>

            <!-- Styles pour la section livres -->
            <Style x:Key="FooterHome" TargetType="StackLayout">
                <Setter Property="Spacing" Value="20" />
                <Setter Property="Padding" Value="20" />
                <Setter Property="BackgroundColor" Value="{StaticResource LightBackground}" />
            </Style>

            <Style x:Key="FooterHomeContent" TargetType="Border">
                <Setter Property="Padding" Value="20" />
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="StrokeShape" Value="RoundRectangle 20,20,20,20" />
                <Setter Property="HorizontalOptions" Value="Fill" />
            </Style>

            <Style x:Key="FooterBookText" TargetType="VerticalStackLayout">
                <Setter Property="Spacing" Value="4" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>

            <Style x:Key="ImageCart" TargetType="Image">
                <Setter Property="WidthRequest" Value="80" />
                <Setter Property="HeightRequest" Value="80" />
                <Setter Property="Aspect" Value="AspectFill" />
                <Setter Property="Margin" Value="0,0,15,0" />
            </Style>

            <!-- Texte des livres -->
            <Style x:Key="SectionTitleBook" TargetType="Label">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontFamily" Value="PlaypenSansSemiBold" />
                <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
            </Style>

            <Style x:Key="SectionAuthorsName" TargetType="Label">
                <Setter Property="FontSize" Value="13" />
                <Setter Property="FontFamily" Value="PlaypenSansRegular" />
                <Setter Property="TextColor" Value="#666666" />
            </Style>

            <Style x:Key="BookDescription" TargetType="Label">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontFamily" Value="PlaypenSansRegular" />
                <Setter Property="TextColor" Value="#444444" />
                <Setter Property="LineBreakMode" Value="WordWrap" />
            </Style>

            <!-- Titre section -->
            <Style x:Key="SectionTitle" TargetType="Label">
                <Setter Property="FontSize" Value="20" />
                <Setter Property="FontFamily" Value="PlaypenSansSemiBold" />
                <Setter Property="TextColor" Value="{StaticResource PrimaryBlue}" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>

            
            <!--========= STYLE POUR LA PAGE DES LIVRES -->
            <Color x:Key="PrimaryBlueHover">#42A5F5</Color>
            <!-- Bleu plus clair au survol -->
            <Color x:Key="PrimaryBlueDark">#1976D2</Color>
            <!-- Bleu plus foncé quand pressé -->


            <!-- Zone de recherche -->
            <Style x:Key="RechercherZone" TargetType="HorizontalStackLayout">
                <Setter Property="Padding" Value="0"/>
                <Setter Property="WidthRequest" Value="700"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="Margin" Value="20"/>
                <Setter Property="Spacing" Value="10"/>
                <Setter Property="Background" Value="Transparent"/>
            </Style>

            <Style x:Key="TextZone" TargetType="Entry">
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="FontFamily" Value="PlaypenSansRegular"/>
                <Setter Property="Margin" Value="20,0"/>
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="HorizontalOptions" Value="Fill"/>
                <Setter Property="VerticalTextAlignment" Value="Center"/>
            </Style>
            <Style x:Key="SearchIconButton" TargetType="Button">
                <Setter Property="WidthRequest" Value="40" />
                <Setter Property="HeightRequest" Value="40" />
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryBlue}" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="HorizontalOptions" Value="End" />
                <Setter Property="BorderColor" Value="Transparent" />
                <Setter Property="BorderWidth" Value="0" />
